<view class="container">
  <!-- 菜品图片 -->
  

  <!-- 菜品信息 -->
  <view class="dish-info">
    <view class="dish-price">¥16</view>
    <view class="dish-name">烧乳鸽</view>
    <view class="tags">
      <view class="tag">粤菜</view>
      <view class="tag">烧菜</view>
      <view class="tag">甜咸</view>
    </view>
    <view class="dish-description">
